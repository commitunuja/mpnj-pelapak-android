<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".view.alamat">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardElevation="3dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back_alamat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp_white" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Alamat"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#fff"
                android:textSize="20sp"
                app:fontFamily="@font/roboto_bold" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Provinsi"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.circularreveal.CircularRevealFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/spinner">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp_provinsi"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:spinnerMode="dropdown" />
            </com.google.android.material.circularreveal.CircularRevealFrameLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Kabupaten / Kota"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.circularreveal.CircularRevealFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/spinner">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp_kota"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:spinnerMode="dropdown" />
            </com.google.android.material.circularreveal.CircularRevealFrameLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Alamat"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.circularreveal.CircularRevealFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/spinner">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_alamat_alamat"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#00FFFFFF"
                    android:gravity="top" />
            </com.google.android.material.circularreveal.CircularRevealFrameLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Kode Pos"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.circularreveal.CircularRevealFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/spinner">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_alamat_kode_pos"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="number"
                    android:background="#00FFFFFF" />
            </com.google.android.material.circularreveal.CircularRevealFrameLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_alamat_simpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/login"
                android:text="Simpan"
                android:textColor="#fff" />


        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>